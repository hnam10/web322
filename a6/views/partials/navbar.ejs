<style>
  .navbar {
    position: relative;
    z-index: 10; /* navbar가 다른 요소 위에 오도록 설정 */
  }

  .hero {
    position: relative;
    z-index: 1; /* navbar보다 뒤에 위치하도록 설정 */
  }
</style>
<nav class="navbar bg-white shadow-lg">
  <div class="navbar-start">
    <a href="/" class="text-2xl font-bold text-primary">Lego Collection</a>
  </div>
  <div class="navbar-center">
    <a href="/lego/sets" class="btn <%= (page === '/lego/sets') ? 'btn-primary' : '' %>">View Collection</a>
    <a href="/about" class="btn <%= (page === '/about') ? 'btn-primary' : '' %>">About</a>
  </div>
  <div class="navbar-end">
    <% if (session.user) { %>
      <!-- Logged-in User Dropdown -->
      <div class="dropdown dropdown-end">

        <label tabindex="0" class="btn btn-outline">Account: <%= session.user.userName %></label>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li><a href="/lego/addSet" class="<%= (page === '/lego/addSet') ? 'active' : '' %>">Add to Collection</a></li>
          <li><a href="/userHistory" class="<%= (page === '/userHistory') ? 'active' : '' %>">User History</a></li>
          <li><a href="/logout">Log Out</a></li>
        </ul>
      </div>
      <% } else { %>
        <!-- Guest User Dropdown -->
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-outline">Account
            <span class="caret">&#9660;</span></label> <!-- 화살표 -->

          <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
            <li><a href="/login" class="<%= (page === '/login') ? 'active' : '' %>">Login</a></li>
            <li><a href="/register" class="<%= (page === '/register') ? 'active' : '' %>">Register</a></li>
          </ul>
        </div>
        <% } %>
  </div>
</nav>